{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "allowJs": true,
    "checkJs": false,
    "strict": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "rootDir": "./src-ts",
    "outDir": "./dist",

    "skipLibCheck": true,
    "baseUrl": "./src-ts",

    "typeRoots": ["./src-ts/types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src-ts/**/*"],
  "exclude": ["node_modules", "dist"]
}
