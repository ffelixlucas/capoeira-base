{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "allowJs": true,
    "checkJs": false,
    "strict": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "./dist",
    "rootDir": ".",

    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
